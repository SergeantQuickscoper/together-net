<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#060606"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button6"
        android:layout_width="201dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@null"
        android:fontFamily="@font/MSXScreen0"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="Continue"
        android:textAlignment="center"
        android:textColor="#FF52F3"
        android:textColorHighlight="#FF52F3"
        android:textColorHint="#FF52F3"
        android:textColorLink="#FF52F3"
        android:textSize="20sp"
        android:translationY="5dp"
        app:iconTint="@color/design_default_color_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="366dp"
        android:layout_height="84dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/PetMe128"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="1. Bluetooth: This will be used to discover other members of the network via Bluetooth Low Energy."
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="367dp"
        android:layout_height="84dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="224dp"
        android:fontFamily="@font/PetMe128"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="2. WiFi (optional): This will be used to discover other members of the network via WiFi Aware."
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="158dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="308dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@null"
        android:fontFamily="@font/MSXScreen0"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="Acknowledge"
        android:textAlignment="center"
        android:textColor="#FF52F3"
        android:textColorHighlight="#FF52F3"
        android:textColorHint="#FF52F3"
        android:textColorLink="#FF52F3"
        android:textSize="14sp"
        app:iconTint="@color/design_default_color_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="366dp"
        android:layout_height="101dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="344dp"
        android:fontFamily="@font/PetMe128"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="3. Foreground Permissions: This will enable your device to act a relay even when you don't have this app opened"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="158dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="448dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@null"
        android:fontFamily="@font/MSXScreen0"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="Acknowledge"
        android:textAlignment="center"
        android:textColor="#FF52F3"
        android:textColorHighlight="#FF52F3"
        android:textColorHint="#FF52F3"
        android:textColorLink="#FF52F3"
        android:textSize="14sp"
        app:iconTint="@color/design_default_color_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="366dp"
        android:layout_height="107dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="484dp"
        android:fontFamily="@font/PetMe128"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="4. Location Permissions (Optional): With this you will have the ability to broadcast your location to those you select on the network."
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button5"
        android:layout_width="158dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="592dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@null"
        android:fontFamily="@font/MSXScreen0"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="Acknowledge"
        android:textAlignment="center"
        android:textColor="#FF52F3"
        android:textColorHighlight="#FF52F3"
        android:textColorHint="#FF52F3"
        android:textColorLink="#FF52F3"
        android:textSize="14sp"
        app:iconTint="@color/design_default_color_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="158dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@null"
        android:fontFamily="@font/MSXScreen0"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="Acknowledge"
        android:textAlignment="center"
        android:textColor="#FF52F3"
        android:textColorHighlight="#FF52F3"
        android:textColorHint="#FF52F3"
        android:textColorLink="#FF52F3"
        android:textSize="14sp"
        android:translationY="2dp"
        app:iconTint="@color/design_default_color_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/PetMe128"
        android:text="TogetherNet"
        android:textColor="#49FF40"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="355dp"
        android:layout_height="51dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/PetMe128"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        android:text="To become a member of the network please grant the following permissions:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>