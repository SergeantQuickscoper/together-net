<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#060606"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button7"
        android:layout_width="201dp"
        android:layout_height="43dp"
        android:layout_marginTop="636dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@null"
        android:fontFamily="@font/msxscreen01"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="Continue"
        android:textAlignment="center"
        android:textColor="#FF52F3"
        android:textColorHighlight="#FF52F3"
        android:textColorHint="#FF52F3"
        android:textColorLink="#FF52F3"
        android:textSize="20sp"
        android:translationY="5dp"
        app:iconTint="@color/design_default_color_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="97dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/pet"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        android:text="Nickname"
        android:textAlignment="center"
        android:textColor="#2C1DFF"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="282dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/pet"
        android:gravity="start"
        android:lineSpacingExtra="4sp"
        android:text=" Unique Node Identifier"
        android:textAlignment="textStart"
        android:textColor="#2C1DFF"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="356dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="164dp"
        android:fontFamily="@font/msxscreen01"
        android:gravity="start"
        android:lineSpacingExtra="4sp"
        android:paddingLeft="12dp"
        android:text="N/A"
        android:textAlignment="textStart"
        android:textColor="#2C1DFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pet"
        android:text="TogetherNet"
        android:textColor="#49FF40"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:baselineAligned="false"
        android:gravity="top"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nickNameInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/msxscreen01"
            android:gravity="bottom"
            android:paddingLeft="12dp"
            android:paddingBottom="16dp"
            android:text="Enter your nickname..."
            android:textAlignment="gravity"
            android:textColor="#2C1DFF"
            android:textSize="16sp"
            tools:text="Enter your nickname..." />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="355dp"
        android:layout_height="51dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/pet"
        android:gravity="center|start"
        android:lineSpacingExtra="4sp"
        android:text="Enter a nickname for your node. Your unique node identifier will be based off of this nickname:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>